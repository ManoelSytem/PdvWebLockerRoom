@model IEnumerable<BackOfficeFoodService.Models.ProdutoModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("../Shared/ViewMensagem.cshtml")
<p>
    <a asp-action="Create">Novo produto</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th>
                Preço  R$
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.valor)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.codigo }) |
                        @Html.ActionLink("Details", "Details", new { id = item.codigo }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.codigo })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
